<%- layout("./layouts/boilerplate.ejs")%>

<body>
    <div class="card mb-3">
        <img src="<%= chats.image %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= chats.title %></h5>
          <p class="card-text"><%= chats.description %></p>
          <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
        </div>
      </div>
    <h1>Users Details</h1>
    <ul class="container ">
        <li class="showimage"><img src="" alt=""></li>
        <li ><%= chats.category %></li>
        <li><%= chats.profileImage %></li>
        <li><%= chats.location %></li>
        <li><%= chats.country %></li>
    </ul>
    <br>
    <a href="/chats/<%= chats._id %>/edit">Edit Post</a>
    <br><br>
    <form action="/chats/<%= chats._id %>?_method=DELETE" method="post">
        <button>Delete Post</button>
    </form>
</body>
</html>